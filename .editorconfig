root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSON, YAML files
[*.{js,jsx,ts,tsx,json,yml,yaml}]
indent_style = space
indent_size = 2

# CSS, HTML files
[*.{css,html}]
indent_style = space
indent_size = 2

# Config files
[*.{config.js,config.ts,config.mjs}]
indent_style = space
indent_size = 2

# Markdown files - preserve trailing whitespace (for line breaks)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Package files
[{package.json,package-lock.json}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Batch files (Windows)
[*.bat]
end_of_line = crlf